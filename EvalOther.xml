<?xml version='1.0'?>
<Section name="EvalOther">
	<Data>
		<Element type="BooleanFormElement" name="EvalOther"/>
 		<Element type="BooleanFormElement" name="EvalOtherNegative"/>
        <Element type="BooleanFormElement" name="Obesity"/>
        <Element type="BooleanFormElement" name="Depression"/>
 		<Element type="BooleanFormElement" name="Glaucoma"/>
        <Element type="BooleanFormElement" name="Pregnant"/>
        <Element type="BooleanFormElement" name="ETOHAbuse"/>
 		<Element type="BooleanFormElement" name="DrugAbuse"/>
        <Element type="BooleanFormElement" name="DifficultIVAccess"/>
        <Element type="BooleanFormElement" name="EGA"/>
        <Element type="TextElement" name="EGAWeeks"/>
	</Data>
    
    <Validation>
        <RadioButtons>
            <Element name="EvalOther"/>
            <Element name="EvalOtherNegative"/>
        </RadioButtons>
        <Rule>
            <Condition >
                <Element name="EvalOtherNegative" value="true" />
            </Condition>
            <Action type="check" operator="and">
                <Element name="Obesity" value="false" />
                <Element name="Depression" value="false" />
                <Element name="Glaucoma" value="false" />
                <Element name="Pregnant" value="false" />
                <Element name="ETOHAbuse" value="false" />
                <Element name="DrugAbuse" value="false" />
                <Element name="DifficultIVAccess" value="false" />
                <Element name="EGA" value="false" />
            </Action>
        </Rule>
        <Rule>
            <Condition >
                <Element name="EvalOther" value="true" />
            </Condition>
            <Action type="check" operator="or">
                <Element name="Obesity" value="true" />
                <Element name="Depression" value="true" />
                <Element name="Glaucoma" value="true" />
                <Element name="Pregnant" value="true" />
                <Element name="ETOHAbuse" value="true" />
                <Element name="DrugAbuse" value="true" />
                <Element name="DifficultIVAccess" value="true" />
                <Element name="EGA" value="true" />
            </Action>
        </Rule>
        <Rule>
            <Condition >
                <Element name="EGA" value="true" />
            </Condition>
            <Action type="check" >
                <Element name="EGAWeeks" value="NotEmpty" />
            </Action>
        </Rule>
    </Validation>
    
    <Graphics>
        <Group orientation="vertical" label="Evaluation Other" >
            <Group orientation="horizontal" marginB="8">
                <Element name="EvalOther" label="Positive" />
                <Element name="EvalOtherNegative" label="Negative" />
            </Group>
            <Group orientation="horizontal" >
                <Group orientation="vertical" >
                    <Element name="Obesity" label="Obesity" />
                    <Element name="Depression" label="Depression" />
                    <Element name="Glaucoma" label="Glaucoma" />
                    <Element name="Pregnant" label="Pregnant" />
                </Group>
                <Group orientation="vertical"  >
                    <Element name="ETOHAbuse" label="ETOH Abuse" />
                    <Element name="DrugAbuse" label="Drug Abuse" />
                    <Element name="DifficultIVAccess" label="Difficult IV Access" />
                    <Group orientation="horizontal" >
                        <Element name="EGA" label="EGA" marginR="3"/>
                        <Element name="EGAWeeks" marginR="3"/>
                        <Element label="weeks" />
                    </Group>
                </Group>
            </Group>
            
        </Group>
    </Graphics>
</Section>
