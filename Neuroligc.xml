<?xml version='1.0'?>
<Section name="Neuroligc">
	<Data>
		<Element type="BooleanFormElement" name="Neurologic"/>
 		<Element type="BooleanFormElement" name="NeurologicNegative"/>
		<Element type="BooleanFormElement" name="Dementia"/>
		<Element type="BooleanFormElement" name="Neuropathy"/>
		<Element type="BooleanFormElement" name="BackPain"/>
		<Element type="BooleanFormElement" name="NeckPain"/>
		<Element type="BooleanFormElement" name="CVA"/>
		<Element type="BooleanFormElement" name="TIA"/>
		<Element type="BooleanFormElement" name="AlteredMentalStatus"/>
		<Element type="BooleanFormElement" name="Seizures"/>
	</Data>
    
    <Validation>
        <RadioButtons>
            <Element name="Neurologic"/>
            <Element name="NeurologicNegative"/>
        </RadioButtons>
        <Rule>
            <Condition >
                <Element name="NeurologicNegative" value="true" />
            </Condition>
            <Action type="check" operator="and">
                <Element name="Dementia" value="false" />
                <Element name="Neuropathy" value="false" />
                <Element name="BackPain" value="false" />
                <Element name="NeckPain" value="false" />
                <Element name="CVA" value="false" />
                <Element name="TIA" value="false" />
                <Element name="AlteredMentalStatus" value="false" />
                <Element name="Seizures" value="false" />
            </Action>
        </Rule>
        <Rule>
            <Condition >
                <Element name="Neurologic" value="true" />
            </Condition>
            <Action type="check" operator="or">
                <Element name="Dementia" value="true" />
                <Element name="Neuropathy" value="true" />
                <Element name="BackPain" value="true" />
                <Element name="NeckPain" value="true" />
                <Element name="CVA" value="true" />
                <Element name="TIA" value="true" />
                <Element name="AlteredMentalStatus" value="true" />
                <Element name="Seizures" value="true" />
            </Action>
        </Rule>
    </Validation>
    
    <Graphics>
        <Group orientation="vertical" label="Neurologic" >
            <Group orientation="horizontal" marginB="8">
                <Element name="Neurologic" label="Positive" />
                <Element name="NeurologicNegative" label="Negative" />
            </Group>
            <Group orientation="horizontal" >
                <Group orientation="vertical" >
                    <Element name="Dementia" label="Dementia" />
                    <Element name="Neuropathy" label="Neuropathy" />
                    <Element name="BackPain" label="BackPain" />
                    <Element name="NeckPain" label="NeckPain" />
                </Group>
                <Group orientation="vertical"  >
                    <Element name="CVA" label="CVA" />
                    <Element name="TIA" label="TIA" />
                    <Element name="AlteredMentalStatus" label="Altered Mental Status" />
                    <Element name="Seizures" label="Seizures" />
                </Group>
            </Group>
        </Group>
    </Graphics>
</Section>