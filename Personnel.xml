<?xml version='1.0'?>
<Section name="Personnel">
    <Data>
        <Element type="TextElement" name="ResponsibleMd"/>
        <Element type="StringListElement" name="Surgeon"/>
        <Element type="StringListElement" name="Anesthesiologist"/>
        <Element type="StringListElement" name="CrnaAaa"/>
    </Data>
    <Validation>
        <Rule>
            <Action type="check">
                <Element name="ResponsibleMd" value="NotEmpty" />
            </Action>
        </Rule>
    </Validation>
    
    <Graphics>
        <Group label="Personnel" orientation="vertical">
            <Element name="ResponsibleMd" label="Responsible MD/DO at Emergence: " marginB="8"/>
            <Group orientation="horizontal">
                <Group orientation="vertical">
                    <Element name="Surgeon" label="Surgeon" />
                </Group>
                <Group orientation="vertical">
                    <Element name="Anesthesiologist" label="Anesthesiologist" />
                </Group>
                <Group orientation="vertical">
                    <Element name="CrnaAaa" label="CRNA/AA" />
                </Group>
            </Group>
        </Group>
    </Graphics>
</Section>