<?xml version='1.0'?>
<Section name="HemOnc">
	<Data>
		<Element type="BooleanFormElement" name="HemOnc"/>
 		<Element type="BooleanFormElement" name="HemOncNegative"/>
		<Element type="BooleanFormElement" name="Anemia"/>
		<Element type="BooleanFormElement" name="DVT"/>
		<Element type="BooleanFormElement" name="BloodRefusal"/>
        <Element type="BooleanFormElement" name="Coagulopathy"/>
		<Element type="BooleanFormElement" name="Cancer"/>
		<Element type="BooleanFormElement" name="Chemo"/>
		<Element type="BooleanFormElement" name="Radiation"/>
	</Data>
    
    <Validation>
        <RadioButtons>
            <Element name="HemOnc"/>
            <Element name="HemOncNegative"/>
        </RadioButtons>
        <Rule>
            <Condition >
                <Element name="HemOncNegative" value="true" />
            </Condition>
            <Action type="check" operator="and">
                <Element name="Anemia" value="false" />
                <Element name="DVT" value="false" />
                <Element name="BloodRefusal" value="false" />
                <Element name="Coagulopathy" value="false" />
                <Element name="Cancer" value="false" />
                <Element name="Chemo" value="false" />
                <Element name="Radiation" value="false" />
            </Action>
        </Rule>
        <Rule>
            <Condition >
                <Element name="HemOnc" value="true" />
            </Condition>
            <Action type="check" operator="or">
                <Element name="Anemia" value="true" />
                <Element name="DVT" value="true" />
                <Element name="BloodRefusal" value="true" />
                <Element name="Coagulopathy" value="true" />
                <Element name="Cancer" value="true" />
                <Element name="Chemo" value="true" />
                <Element name="Radiation" value="true" />
            </Action>
        </Rule>
    </Validation>
    
    <Graphics>
        <Group orientation="vertical" label="Hem/Onc" >
            <Group orientation="horizontal" marginB="8">
                <Element name="HemOnc" label="Positive" />
                <Element name="HemOncNegative" label="Negative" />
            </Group>
            <Group orientation="horizontal" >
                <Group orientation="vertical" >
                    <Element name="Anemia" label="Anemia" />
                    <Element name="DVT" label="DVT" />
                    <Element name="BloodRefusal" label="Blood Refusal" />
                </Group>
                <Group orientation="vertical"  >
                    <Element name="Coagulopathy" label="Coagulopathy" />
                    <Element name="Cancer" label="Cancer" />
                    <Element name="Chemo" label="Chemo" />
                    <Element name="Radiation" label="Radiation" />
                </Group>
            </Group>
        </Group>
    </Graphics>
</Section>