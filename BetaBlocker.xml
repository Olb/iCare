<?xml version='1.0'?>
<Section name="BetaBlocker">
    <Data>
        <Element type="BooleanFormElement" name="BetaBlockTakenPastDay"/>
        <Element type="BooleanFormElement" name="GivenInOr"/>
        <Element type="BooleanFormElement" name="ContraIndication"/>
        <Element type="BooleanFormElement" name="HeartRateLessThanFifty"/>
        <Element type="BooleanFormElement" name="Hypotension"/>
    </Data>
    <Validation>
        <Rule>
            <Condition>
                <Element name="ContraIndication" value="true" />
            </Condition>
            <Action type="check" operator="or">
                <Element name="HeartRateLessThanFifty" value="true" />
                <Element name="Hypotension" value="true" />
            </Action>
        </Rule>
    </Validation>
    <Graphics>
        <Group label="If Pt on Beta-Blocker" orientation="vertical" >
            <Element name="BetaBlockTakenPastDay" label="Taken in past 24 hrs" />
            <Element name="GivenInOr" label="Given in O.R." />
            <Element name="ContraIndication" label="ContraIndication:" />
            <Group orientation="vertical" marginL="10" marginT="0" marginB="0">
                <Element name="Hypotension" label="Hypotension" />
                <Element name="HeartRateLessThanFifty" label="Heart rate less than 50" />
            </Group>
        </Group>
    </Graphics>
</Section>
