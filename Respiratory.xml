<?xml version='1.0'?>
<Section name="Respiratory">
	<Data>
		<Element type="BooleanFormElement" name="Respiratory"/>
 		<Element type="BooleanFormElement" name="RespiratoryNone"/>
        <Element type="BooleanFormElement" name="HomeO2"/>
 		<Element type="BooleanFormElement" name="COPD"/>
        <Element type="BooleanFormElement" name="CPAP"/>
 		<Element type="BooleanFormElement" name="RecentURI"/>
        <Element type="BooleanFormElement" name="Asthma"/>
 		<Element type="BooleanFormElement" name="SleepApnea"/>
        <Element type="BooleanFormElement" name="Smoking"/>
        <Element type="TextElement" name="PPD"/>
        <Element type="TextElement" name="YRS"/>
        <Element type="TextElement" name="QuitAmountAgo"/>
        <Element type="TextViewElement" name="Notes"/>
	</Data>
    
    <Validation>
        <RadioButtons>
            <Element name="Respiratory"/>
            <Element name="RespiratoryNone"/>
        </RadioButtons>
        <Rule>
            <Condition >
                <Element name="RespiratoryNone" value="true" />
            </Condition>
            <Action type="check" operator="and">
                <Element name="HomeO2" value="false" />
                <Element name="COPD" value="false" />
                <Element name="CPAP" value="false" />
                <Element name="RecentURI" value="false" />
                <Element name="Asthma" value="false" />
                <Element name="SleepApnea" value="false" />
                <Element name="Smoking" value="false" />
            </Action>
        </Rule>
        <Rule>
            <Condition >
                <Element name="Respiratory" value="true" />
            </Condition>
            <Action type="check" operator="or">
                <Element name="HomeO2" value="true" />
                <Element name="COPD" value="true" />
                <Element name="CPAP" value="true" />
                <Element name="RecentURI" value="true" />
                <Element name="Asthma" value="true" />
                <Element name="SleepApnea" value="true" />
                <Element name="Smoking" value="true" />
            </Action>
        </Rule>
        <Rule>
            <Condition >
                <Element name="Smoking" value="true" />
            </Condition>
            <Action type="check">
                <Element name="QuitAmountAgo" value="NotEmpty" />
            </Action>
            <Action type="check">
                <Element name="PPD" value="NotEmpty" />
            </Action>
            <Action type="check">
                <Element name="YRS" value="NotEmpty" />
            </Action>
        </Rule>
    </Validation>
    
    <Graphics>
        <Group orientation="vertical" label="Respiratory" >
            <Group orientation="horizontal" marginB="8">
                <Element name="Respiratory" label="Positive" />
                <Element name="RespiratoryNone" label="Negative" />
            </Group>
            <Group orientation="horizontal" >
                <Group orientation="vertical" >
                    <Element name="HomeO2" label="Home O2" />
                    <Element name="COPD" label="COPD" />
                    <Element name="CPAP" label="CPAP" />
                </Group>
                <Group orientation="vertical"  >
                    <Element name="RecentURI" label="Recent URI" />
                    <Element name="Asthma" label="Asthma" />
                    <Element name="SleepApnea" label="SleepApnea" />
                </Group>
            </Group>
            <Group orientation="horizontal" >
                <Element name="Smoking" label="Smoking: " />
                <Element name="PPD" />
                <Element label="ppd x" />
                <Element name="YRS" />
                <Element label="years" />
                <Element name="QuitAmountAgo" label="Quit" />
                <Element label="years ago" />
            </Group>
            <Element name="Notes" label="Notes" width="400" />
        </Group>
    </Graphics>
</Section>