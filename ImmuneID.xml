<?xml version='1.0'?>
<Section name="ImmuneID">
	<Data>
		<Element type="BooleanFormElement" name="ImmuneID"/>
 		<Element type="BooleanFormElement" name="ImmuneIDNegative"/>
		<Element type="BooleanFormElement" name="RheumArt"/>
		<Element type="BooleanFormElement" name="HIV"/>
		<Element type="BooleanFormElement" name="AutoImmuneDisease"/>
        <Element type="BooleanFormElement" name="OngoingInfection"/>
        <Element type="TextViewElement" name="Notes"/>
	</Data>
    
    <Validation>
        <RadioButtons>
            <Element name="ImmuneID"/>
            <Element name="ImmuneIDNegative"/>
        </RadioButtons>
        <Rule>
            <Condition >
                <Element name="ImmuneIDNegative" value="true" />
            </Condition>
            <Action type="check" operator="and">
                <Element name="RheumArt" value="false" />
                <Element name="HIV" value="false" />
                <Element name="AutoImmuneDisease" value="false" />
                <Element name="OngoingInfection" value="false" />
            </Action>
        </Rule>
        <Rule>
            <Condition >
                <Element name="ImmuneID" value="true" />
            </Condition>
            <Action type="check" operator="or">
                <Element name="RheumArt" value="true" />
                <Element name="HIV" value="true" />
                <Element name="AutoImmuneDisease" value="true" />
                <Element name="OngoingInfection" value="true" />
            </Action>
        </Rule>
    </Validation>
    
    <Graphics>
        <Group orientation="vertical" label="Immune/ID" >
            <Group orientation="horizontal" marginB="8">
                <Element name="ImmuneID" label="Positive" />
                <Element name="ImmuneIDNegative" label="Negative" />
            </Group>
            <Group orientation="horizontal" >
                <Group orientation="vertical" >
                    <Element name="RheumArt" label="Rheum Art" />
                    <Element name="HIV" label="HIV" />
                </Group>
                <Group orientation="vertical"  >
                    <Element name="AutoImmuneDisease" label="AutoImmune Disease" />
                    <Element name="OngoingInfection" label="Ongoing Infection" />
                </Group>
            </Group>
            <Element name="Notes" label="Notes" width="400" />
        </Group>
    </Graphics>
</Section>
